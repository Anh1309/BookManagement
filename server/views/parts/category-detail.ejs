<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Category detail</h1>
        </div>
    </div>
    <form action="edit-category" method="post" id="formEditCategory">
        <div class="col-md-6 col-sm-8 col-xs-12">
            <div class="form-group">
                <label for="categoryNameEdit">Name</label>
                <input type="text" class="form-control" id="categoryNameEdit" value="<%=category.name%>" name="name">
            </div>
            <input type='text' id='categoryIdEdit' name='categoryId' value='<%=category.id%>' hidden>
            <%
            if (user.role === 'ADMIN') { %>
            <input type="submit" value="Edit" class="btn btn-success">
            <a href="category-list" class="btn btn-default">Back to category list</a>
            <%} else {%>
            <a href="category-list" class="btn btn-default">Back to category list</a>
            <%}%>
        </div>

    </form>
</div>

